{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:/mingw/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\mingw\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            }

        },
        {
            "label":"Kotlin start",
            "type": "shell",
            "command": "kotlinc d${file} -include-runtime -d${fileDirname}.jar",
            "group": {
                "kind": "build",
                "isDefault": true
        } 
        }
    ]
}